{
    "name": "atelierspierrot/demobuilder",
    "type": "library",
    "description": "Helper app to build demo pages based on an HTML5 template.",
    "keywords": [ "php", "template", "demo" ],
    "homepage": "http://github.com/atelierspierrot/demobuilder",
    "license": "GPL-3.0",
    "authors": [
        {
            "name": "Les Ateliers Pierrot & contributors",
            "email": "contact@ateliers-pierrot.fr",
            "homepage": "http://www.ateliers-pierrot.fr/"
        },{
            "name": "Pierre Cassat",
            "email": "me@e-piwi.fr",
            "homepage": "http://github.com/piwi"
    }],
    "minimum-stability": "dev",
    "require": {
        "php": ">=5.3.0",
        "atelierspierrot/patterns": "1.*",
        "atelierspierrot/library": "1.*",
        "atelierspierrot/webfilesystem": "1.*",
        "atelierspierrot/assets-manager": "dev-master",
        "atelierspierrot/templatengine": "dev-master",
        "piwi/markdown-extended": "dev-master"
    },
    "require-dev": { "sami/sami": "dev-master" },
    "autoload": { "psr-0": { "DemoBuilder": "src" } },
    "extra": {
        "layouts": "src/DemoBuilder/views",
        "views": "src/DemoBuilder/views",
        "views-functions": "src/DemoBuilder/view_functions.php"
    },
    "scripts": { "post-autoload-dump": "Assets\\Composer\\TemplateEngineInstaller::postAutoloadDump" },
    "config": {
        "vendor-dir": "src/vendor",
        "bin-dir": "bin",
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    }
}
